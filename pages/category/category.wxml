<view class="container">
    <view class="search-container">
        <l-button
                width="710"
                height="60"
                icon="research"
                icon-size="24"
                icon-color="#C4C9D2"
                l-class="search-btn"
                bind:lintap="onGotoSearch"
                shape="square">
        搜索商品
</l-button>
    </view>
    <view class="main">
        <l-segment
                height="{{segHeight}}"
                item-height="90"
                even="{{false}}"
                width="160"
                l-active-class="segment-item-active"
                l-inactive-class="segment-item"
                l-line-class="l-seg-line"
                placement="left">
            <l-segment-item key="1" tab="包包"></l-segment-item>
            <l-segment-item key="2" tab="工艺"></l-segment-item>
            <l-segment-item key="3" tab="服装"></l-segment-item>
            <l-segment-item key="4" tab="鞋子"></l-segment-item>
            <l-segment-item key="5" tab="饰品"></l-segment-item>
            <l-segment-item key="6" tab="居家"></l-segment-item>
        </l-segment>
        <view></view>
    </view>
</view>